#################
# bspwm hotkeys #
#################

#
# WINDOW
#

# close window
super + q
	bspc node -c

# kill window
super + shift + k
	bspc node -k

# change window state
super + {t,shift + t,f,a}
	bspc node -t "~{tiled,pseudo_tiled,floating,fullscreen}"

# toggle window flags
super + {shift + l,s}
	bspc node -g {locked,sticky}

# slelect last window on desktop
alt + Tab
	bspc node -f last.local

# move focus to seleted direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

super + {Left,Down,Up,Right}
    bspc node -f {west,south,north,east}

# preselect splitting area
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

# cancel preseletion
super + Escape
	bspc node -p cancel

# flip the tree
super + ctrl + {_,shift +} f
	bspc node @focused:/ -F {vertical,horizontal}

# rotate the tree
super + ctrl + r
	bspc node @focused:/ -R 90

# balance
super + b
	bspc node @focused:/ -B

#
# DESKTOP
#

# switch to workspace 1-9, move Window
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

# switch to last/next workspace
super + {_,ctrl + } Tab
	bspc desktop -f {last,next}

# monocle
super + w
	bspc desktop -l next


#
# CONFIG
#

# resize window gap
super + {o,i}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 4))


#
# MOUSE
#

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

super + shift + button1
	bspc pointer -g resize_corner

super + !{_,shift + }button1
	bspc pointer -t %i %i

super + @{_,shift + }button1
	bspc pointer -u

super + button{4,5}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))


##########################
# wm independent hotkeys #
##########################

# open termianl
super + Return
	xfce4-terminal

# open drop-down terminal
super + {asciicircum,ctrl + Return}
	xfce4-terminal --drop-down

# open application launcher
super + d
	xfce4-popup-whiskermenu

# dmenu based calculator
super + c
	~/scripts/=

# open file browser
super + e
	nautilus

# lock screen, lock and suspend
super + {_,alt +} space
	~/scripts/blurlock/blurlock {_,& sleep 2; systemctl suspend}

# logout
super + alt + Escape
	bspc quit

# Strg + Alt = AltGr
ctrl + alt + {7,8,9,0}
	xvkbd -xsendevent -text {'\{','[',']','\}'}

# reload sxhkd configuration files:
super + ctrl + Escape
	pkill -USR1 -x sxhkd

# screenshots
{_,super,super + ctrl} + Print
	xfce4-screenshooter --sync -{f,w,r}

# display settings
super + p
	xfce4-display-settings --minimal

# mute/unmute sound
super + {m,u}
	MODE="{_,un}mute"; amixer -c1 set Master $MODE; amixer -c1 set Speaker $MODE
