#################
# bspwm hotkeys #
#################

#
# WINDOW
#

# close window
super + q
	bspc window -c

# kill window
super + shift + k
	bspc window -k

# change window state
super + {s,f,a}
	bspc window -t {sticky,floating,fullscreen}

# swap with last window
super + apostrophe
	bspc window -s last

# cycle through windows
super + {_,shift + }c
	bspc window -f {next,prev}

# cancel preseletion
super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# move focus to seleted direction
super + {h,j,k,l}
        bspc window -f {left,down,up,right}

# preselect splitting area
super + ctrl + {h,j,k,l}
        bspc window -p {left,down,up,right}

# resize window
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

# resize window (reversed)
super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}


#
# DESKTOP
#

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

super + {grave,Tab}
        bspc {window,desktop} -f last

super + bracket{left,right}
	bspc desktop -f {prev,next}

# fullscreen
super + w
	bspc desktop -l next

# balance
super + b
	bspc desktop -B

super + {comma,period}
	bspc desktop -C {backward,forward}

# flip the tree 
super + ctrl + f
	bspc desktop -F vertical

# rotate the tree
super + ctrl + r
	bspc desktop -R 90

#
# CONFIG
#

super + {u,i}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))

super + {o,p}
	bspc config top_padding 22; bspc config -d focused window_gap {25,0}

super + {_,shift + }u   
        bspc config left_padding 0

super + {_,shift + }i
	bspc config left_padding 960	

super + {_,shift + }o
        bspc config right_padding 0

super + {_,shift + }p
        bspc config right_padding 960


#
# MOUSE
#

~button1
	bspc pointer -g focus


super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u


super + {_,shift + }button1
       bspc pointer -g resize_corner

super + !{_,shift + }button1
       bspc pointer -t %i %i
	
super + @{_,shift + }button1
       bspc pointer -u

super + button{4,5}
        bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))


##########################
# wm independent hotkeys #
##########################

# open termianl
super + Return
	xfce4-terminal

# open drop-down terminal
super + ctrl + Return
	xfce4-terminal --drop-down
super + asciicircum
	xfce4-terminal --drop-down

# open application launcher
super + d
	xfce4-popup-whiskermenu

# open thunar
super + t
	thunar

# lock screen
super + space
	slock

# lock screen & suspend
super + alt + space
	slock & sleep 1; systemctl suspend
# logout
super + alt + Escape
	bspc quit

# Strg + Alt = AltGr
ctrl + alt + {7,8,9,0}
	xvkbd -xsendevent -text {'\{','[',']','\}'}

# reload sxhkd configuration files:
super + ctrl + Escape
	pkill -USR1 -x sxhkd

# screenshots
{_,super,super + ctrl} + Print
	xfce4-screenshooter --sync -{f,w,r}	
