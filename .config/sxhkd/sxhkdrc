#################
# bspwm hotkeys #
#################

#
# WINDOW
#

# close window
super + q
	bspc window -c

# kill window
super + shift + k
	bspc window -k

# change window state
super + {s,f,a}
	bspc window -t {sticky,floating,fullscreen}

# cycle through windows
alt + {_,shift + } Tab
	bspc window -f {next,prev}

# cancel preseletion
super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# move focus to seleted direction
super + {h,j,k,l}
	bspc window -f {left,down,up,right}

super + {Left,Down,Up,Right}
    bspc window -f {left,down,up,right}

# preselect splitting area
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {Left,Down,Up,Right}
    bspc window -p {left,down,up,right}

# resize window
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

# resize window (reversed)
super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}


#
# DESKTOP
#

# switch to workspace 1-9
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

# switch to last/next workspace
super + {_,ctrl + } Tab
	bspc desktop -f {last,next}

# fullscreen
super + w
	bspc desktop -l next

# balance
super + b
	bspc desktop -B

# flip the tree 
super + ctrl + f
	bspc desktop -F vertical

# rotate the tree
super + ctrl + r
	bspc desktop -R 90

#
# CONFIG
#

super + {o,i}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 4))


#
# MOUSE
#

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

super + {_,shift + }button1
	bspc pointer -g resize_corner

super + !{_,shift + }button1
	bspc pointer -t %i %i
	
super + @{_,shift + }button1
	bspc pointer -u

super + button{4,5}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))


##########################
# wm independent hotkeys #
##########################

# open termianl
super + Return
	xfce4-terminal

# open drop-down terminal
super + {asciicircum,ctrl + Return}
	xfce4-terminal --drop-down

# open application launcher
super + d
	xfce4-popup-whiskermenu

# open thunar
super + t
	thunar

# lock screen, lock and suspend
super + {_,alt +} space
	~/scripts/blurlock/blurlock {_,& sleep 1; systemctl suspend}

# logout
super + alt + Escape
	bspc quit

# Strg + Alt = AltGr
ctrl + alt + {7,8,9,0}
	xvkbd -xsendevent -text {'\{','[',']','\}'}

# reload sxhkd configuration files:
super + ctrl + Escape
	pkill -USR1 -x sxhkd

# screenshots
{_,super,super + ctrl} + Print
	xfce4-screenshooter --sync -{f,w,r}

# display settings
super + p
	xfce4-display-settings --minimal	
